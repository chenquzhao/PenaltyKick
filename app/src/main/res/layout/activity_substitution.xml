<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/activity_substitution"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/coin_view1"
        android:textSize="20sp"
        android:layout_gravity="right"
        android:textColor="@color/colorComfortGold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/kick_first"
            android:text="Kick first"
            android:textAllCaps="false"
            android:layout_width="206dp"
            android:background="@drawable/btn_play_first"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/save_first"
            android:text="Save first"
            android:textAllCaps="false"
            android:layout_width="206dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/btn_play_mode"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_one"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_two"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_three"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_four"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/name_five"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/substitution"
        android:text="Press NAME one by one"
        android:textColor="#ff8c00"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/reset_sub"
        android:layout_gravity="center_horizontal"
        android:text="Reset"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#bee7e9"
        android:background="@drawable/button_drawable"
        android:layout_width="200dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/betHint"
        android:textColor="#d1ba74"
        android:text="Set your bets below"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/goal_under"
            android:text="Under 7 @ 1.00"
            android:textAllCaps="false"
            android:layout_width="206dp"
            android:background="@drawable/btn_goal_under"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/goal_over"
            android:text="Over 7 @ 1.00"
            android:textAllCaps="false"
            android:layout_width="206dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/btn_goal_under"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <EditText
        android:id="@+id/stake"
        android:hint="Enter stake here (integer only)"
        android:maxLines="1"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/confirm_sub"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="#bee7e9"
        android:background="@drawable/button_drawable"
        android:text="Kick off!"
        android:layout_width="200dp"
        android:layout_height="50dp"/>


</LinearLayout>