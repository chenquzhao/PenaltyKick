<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/third_activity"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/scoreBoard"
        android:text="HUM:"
        android:textColor="#1e90ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/scoreBoard_two"
        android:text="COM:"
        android:textColor="#ff0000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreBoard"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/score_one"
        android:text="0"
        android:textColor="#1e90ff"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/score_two"
        android:text="0"
        android:textColor="#ff0000"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/score_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/reminder"
        android:textColor="#556b2f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/scoreBoard_two"
        android:textSize="30sp"/>



    <TextView
        android:id="@+id/axis"
        android:layout_centerHorizontal="true"
        android:textColor="#daa520"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reminder"
        android:textSize="20sp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:id="@+id/gate"
        android:src="@drawable/goal"/>



    <ImageView
        android:id="@+id/keeper"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:layout_marginTop="215dp"
         />

    <ImageView
        android:id="@+id/leftsave"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:scaleType="centerInside"
        android:layout_marginTop="209dp"
        android:layout_marginLeft="2dp"
        />

    <ImageView
        android:id="@+id/leftmiddlesave"
        android:layout_width="280dip"
        android:layout_height="280dip"
        android:scaleType="centerInside"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="-18dp"
        />

    <ImageView
        android:id="@+id/lefttopsave"
        android:layout_width="240dip"
        android:layout_height="240dip"
        android:scaleType="centerInside"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:id="@+id/middletopsave"
        android:layout_width="240dip"
        android:layout_height="240dip"
        android:scaleType="centerInside"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="82dp"
        />

    <ImageView
        android:id="@+id/middledownsave"
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:scaleType="centerInside"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="143dp"

        />

    <ImageView
        android:id="@+id/rightsave"
        android:layout_width="220dip"
        android:layout_height="220dip"
        android:scaleType="centerInside"
        android:layout_marginTop="209dp"
        android:layout_marginLeft="160dp"

        />

    <ImageView
        android:id="@+id/rightmiddlesave"
        android:layout_width="168dip"
        android:layout_height="168dip"
        android:scaleType="centerInside"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="200dp"
        />

    <ImageView
        android:id="@+id/righttopsave"
        android:layout_width="182dip"
        android:layout_height="182dip"
        android:layout_marginLeft="188dp"
        android:layout_marginTop="186dp"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/keeper_mark"
        android:tint="#FF0000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="223dp"
        android:scaleType="centerInside"
        android:src="@drawable/triangle"
        android:layout_width="10dp"
        android:layout_height="10dp"/>

    <ImageView
        android:id="@+id/soccer_mark"
        android:tint="#FF0000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="388dp"
        android:scaleType="centerInside"
        android:src="@drawable/triangle"
        android:layout_width="10dp"
        android:layout_height="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:id="@+id/soccer"
        android:src="@drawable/soccer"
        android:tint="#ffff00"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/leftStep"
        android:text="left"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="40dp"
    />

    <Button
        android:id="@+id/RightStep"
        android:text="right"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="270dp"
        />

    <Button
        android:id="@+id/home"
        android:text="Settle"
        android:textSize="20sp"
        android:textColor="#bee7e9"
        android:background="@drawable/button_drawable"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="40dp"
        />

    <Button
        android:id="@+id/UpStep"
        android:text="Up"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470dp"
        />

    <Button
        android:id="@+id/DownStep"
        android:text="down"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="520dp"
        />

    <Button
        android:id="@+id/perform"
        android:text="TEST"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="300dp"/>

    <ImageView
        android:id="@+id/fut_card"
        android:scaleType="centerInside"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="175dp"
        android:layout_width="200dp"
        android:layout_height="500dp"/>

    <ImageView
        android:id="@+id/key_point"
        android:layout_marginTop="90dp"
        android:src="@drawable/key_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:id="@+id/power_control"
        android:layout_marginTop="500dp"
        android:layout_width="200dp"
        android:max="100"
        android:progress="25"
        android:layout_height="wrap_content"
        android:maxHeight="5dp"
        android:minHeight="5dp"/>

    <TextView
        android:id="@+id/power_intro"
        android:text="Set Power"
        android:textColor="#f4606c"
        android:layout_marginLeft="55dp"
        android:textSize="20sp"
        android:layout_below="@id/power_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>